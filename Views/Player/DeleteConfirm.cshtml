@model PassionProject_SusanBoratynska.Models.Player
@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Confirm delete player: @Model.firstname @Model.lastname?</h2>
<div class="navbar inblock-display">
    <a href="/Player/Show/@Model.playerID" class="btn btn-default">Cancel</a>
</div>
<form method="POST" class="inblock-display" action="/Player/Delete/@Model.playerID">
    <div class="inpfield"><input type="submit" value="Confirm" class="btn btn-default"/></div>
</form>




