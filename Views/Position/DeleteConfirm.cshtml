@model PassionProject_SusanBoratynska.Models.Position

@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Confirm Delete Position: @Model.position?</h2>
<div class="navbar inblock-display">
    <a href="/Position/Show/@Model.positionID" class="btn btn-default">Cancel</a>
</div>
