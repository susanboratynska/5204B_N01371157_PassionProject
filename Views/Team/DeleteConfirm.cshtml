@model PassionProject_SusanBoratynska.Models.Team
@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Confirm Delete Team: @Model.name?</h2>
<div class="navbar inblock-display">
    <a href="/Position/Show/@Model.teamID" class="btn btn-default inblock-display">Cancel</a>
</div>
<form method="POST" action="/Position/Delete/@Model.teamID" class="inblock-display">
    <div class="inpfield"><input type="submit"  class="btn btn-default" value="Confirm" /></div>
</form>

